---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Theme Kitchen Sink - Dan Lourenço" description="Design system showcase for Dan Lourenço's portfolio" />
	</head>
	<body class="bg-navy-950 text-slate-300">
		<Header />
		<main class="container mx-auto px-4 py-8 space-y-16">
			<section class="py-20">
				<h1 class="text-slate-100 text-5xl font-bold mb-4">Theme Kitchen Sink</h1>
				<p class="text-slate-200 text-xl">
					A comprehensive showcase of all design tokens and components for Dan Lourenço's portfolio.
				</p>
			</section>

			<section>
				<h2 class="text-slate-100 text-3xl font-bold mb-8 font-mono">
					<span class="text-teal-400">$</span> cat colors.css
				</h2>
				
				<div class="space-y-8">
					<div>
						<h3 class="text-slate-200 text-xl font-semibold mb-4">Background Colors</h3>
						<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
							<div class="bg-navy-950 border border-navy-800 p-6 rounded">
								<p class="text-slate-100 font-mono">bg-navy-950</p>
								<p class="text-slate-300 text-sm">#0a192f</p>
							</div>
							<div class="bg-navy-900 border border-navy-800 p-6 rounded">
								<p class="text-slate-100 font-mono">bg-navy-900</p>
								<p class="text-slate-300 text-sm">#112240</p>
							</div>
							<div class="bg-navy-800 border border-navy-800 p-6 rounded">
								<p class="text-slate-100 font-mono">bg-navy-800</p>
								<p class="text-slate-300 text-sm">#233554</p>
							</div>
						</div>
					</div>

					<div>
						<h3 class="text-slate-200 text-xl font-semibold mb-4">Accent Colors</h3>
						<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
							<div class="bg-navy-900 border border-teal-400 p-6 rounded">
								<p class="text-teal-400 font-mono">text-teal-400</p>
								<p class="text-slate-300 text-sm">#64ffda</p>
							</div>
							<div class="bg-navy-900 border border-fuchsia-400 p-6 rounded">
								<p class="text-fuchsia-400 font-mono">text-fuchsia-400</p>
								<p class="text-slate-300 text-sm">#f57dff</p>
							</div>
							<div class="bg-navy-900 border border-sky-400 p-6 rounded">
								<p class="text-sky-400 font-mono">text-sky-400</p>
								<p class="text-slate-300 text-sm">#57cbff</p>
							</div>
						</div>
					</div>

					<div>
						<h3 class="text-slate-200 text-xl font-semibold mb-4">Typography</h3>
						<div class="bg-navy-900 p-6 rounded border border-navy-800">
							<p class="font-sans text-slate-100 text-xl mb-4">Sans Serif - Calibre, Inter, SF Pro Text</p>
							<p class="font-mono text-teal-400 text-xl">Monospace - SF Mono, Fira Code, Roboto Mono</p>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>